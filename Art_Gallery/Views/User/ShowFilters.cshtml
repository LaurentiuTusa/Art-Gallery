@model IEnumerable<Art_Gallery.DAL.Models.Category>

@{
    ViewData["Title"] = "ShowFilters";
    Layout = "~/Views/Shared/User.cshtml";
}

<h1>ShowFilters</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductType)
            </td>
            <td>
                    @Html.ActionLink("See products", "ShowProductsByCategory", new {  Id=item.Id  })
            </td>
        </tr>
}
    </tbody>
</table>
