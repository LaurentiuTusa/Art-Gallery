@model IEnumerable<Art_Gallery.DAL.Models.Product>

@{
    ViewData["Title"] = "ShowAllProducts";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<h1>ShowAllProducts</h1>

<form method="post" asp-action="UndoUpdateProduct">
    <button type="submit">Undo update</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImgPath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                <img src="~/Images/@item.ImgPath" width="250" height="250" asp-append-version />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderId)
            </td>
            <td>
                    @Html.ActionLink("Edit", "UpdateProduct", new {  Id=item.Id  })
            </td>
        </tr>
}
    </tbody>
</table>
